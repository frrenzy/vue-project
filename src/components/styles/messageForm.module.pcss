.messageForm {
    width: 100%;
    box-sizing: border-box;
    padding: 20px;
    margin: 0;
    display: flex;
    gap: 20px;
    align-items: center;
    grid-area: form;

    &__input {
        height: calc(100% - 40px);
        width: calc(100% - 240px);
        border-radius: 60px;
        font-size: 24px;
    }

    &__submit {
        width: 180px;
        height: 60px;
        background-color: #fff;
        color: darkcyan;
        font-size: 24px;
    }
}
